{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    
    "target": "ESNext",
    "module": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src",
    "src/global.d.ts"
  ]
}
